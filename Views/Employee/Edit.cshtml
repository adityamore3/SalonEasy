@model SalonEasy.Models.Employee
@{
    ViewData["Title"] = "Edit Employee";
}

<div class="min-h-screen py-10 px-4">
    <div class="max-w-xl mx-auto shadow-xl rounded-2xl p-8 border border-gray-200">
        <div class="flex items-center mb-6">
            <i class="bi bi-pencil-square text-blue-500 text-2xl me-2"></i>
            <h2 class="text-xl font-semibold text-blue-500">Edit Employee</h2>
        </div>

        <form method="post" class="space-y-5">
            <input type="hidden" asp-for="Id" />

            <div>
                <label class="block text-sm font-medium mb-1 text-gray-700">Full Name</label>
                <input asp-for="Name" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" placeholder="Enter full name" />
                <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label class="block text-sm font-medium mb-1 text-gray-700">Position</label>
                <input asp-for="Position" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" placeholder="e.g., Stylist, Barber" />
                <span asp-validation-for="Position" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label class="block text-sm font-medium mb-1 text-gray-700">Contact</label>
                <input asp-for="Contact" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" placeholder="Phone or Email" />
                <span asp-validation-for="Contact" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label class="block text-sm font-medium mb-1 text-gray-700">Email</label>
                <input asp-for="Email" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" placeholder="Enter email address" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex justify-between pt-4">
                <a href="/Employee" class="flex items-center gap-2 border border-gray-400 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-100 transition">
                    <i class="bi bi-arrow-left-circle"></i>
                    <span>Back</span>
                </a>
                <button type="submit" class="flex items-center gap-2 bg-blue-400 hover:bg-blue-500 text-white font-semibold px-5 py-2 rounded-lg transition">
                    <i class="bi bi-save"></i>
                    <span>Update</span>
                </button>
            </div>
        </form>
    </div>
</div>
