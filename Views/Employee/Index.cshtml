@model List<SalonEasy.Models.Employee>

<section class="py-12 px-6 max-w-7xl mx-auto">
    <div class="flex justify-between items-center mb-8">
        <h2 class="text-3xl font-bold text-slate-800">Employees</h2>
        <a href="/Employee/Create" class="inline-flex items-center gap-2 px-4 py-2 bg-emerald-500 hover:bg-emerald-600 text-white font-semibold rounded-lg shadow">
            <i class="bi bi-plus-circle text-lg"></i> Add Employee
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full text-sm text-left text-slate-700 bg-white shadow rounded-lg overflow-hidden border border-slate-200">
            <thead class="text-xs uppercase bg-slate-100 text-slate-600">
                <tr>
                    <th class="px-4 py-3">Photo</th>
                    <th class="px-4 py-3">Id</th>
                    <th class="px-4 py-3">Name</th>
                    <th class="px-4 py-3">Position</th>
                    <th class="px-4 py-3">Contact</th>
                    <th class="px-4 py-3">Email</th>
                    <th class="px-4 py-3">Rating</th>
                    <th class="px-4 py-3">Status</th>
                    <th class="px-4 py-3">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-200">
                @foreach (var emp in Model)
                {
                    <tr class="hover:bg-slate-50 transition">
                        <td class="px-4 py-3">
                            <img src="@emp.ProfilePictureUrl" alt="Profile" class="w-12 h-12 rounded-full object-cover border border-slate-300 shadow-sm" />
                        </td>
                        <td class="px-4 py-3">@emp.Id</td>
                        <td class="px-4 py-3 font-medium">@emp.Name</td>
                        <td class="px-4 py-3">@emp.Position</td>
                        <td class="px-4 py-3">@emp.Contact</td>
                        <td class="px-4 py-3">@emp.Email</td>
                        <td class="px-4 py-3">
                            <span class="inline-flex items-center gap-1 px-2 py-1 bg-yellow-100 text-yellow-800 text-xs font-medium rounded">
                                <i class="bi bi-star-fill"></i> @emp.Rating
                            </span>
                        </td>
                        <td class="px-4 py-3">
                            @if (emp.IsActive)
                            {
                                <span class="inline-block bg-emerald-100 text-emerald-700 text-xs font-semibold px-3 py-1 rounded-full">Active</span>
                            }
                            else
                            {
                                <span class="inline-block bg-slate-200 text-slate-600 text-xs font-semibold px-3 py-1 rounded-full">Inactive</span>
                            }
                        </td>
                        <td class="px-4 py-3">
                            <div class="flex gap-2">
                                <a href="/Employee/Edit/@emp.Id" class="inline-flex items-center gap-1 px-3 py-1 text-blue-600 hover:text-white hover:bg-blue-600 border border-blue-600 text-xs font-medium rounded transition">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a href="/Employee/Delete/@emp.Id" class="inline-flex items-center gap-1 px-3 py-1 text-rose-600 hover:text-white hover:bg-rose-600 border border-rose-600 text-xs font-medium rounded transition">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

<!-- Bootstrap Icons (ensure this is in your layout _once_) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
