@model SalonEasy.Models.Appointment
@{
    ViewData["Title"] = "Delete Appointment";
}

<div class="max-w-3xl mx-auto mt-10 p-6 rounded-2xl shadow-lg text-black">
    <div class="flex items-center gap-3 mb-6">
        <i class="bi bi-exclamation-triangle-fill text-red-600 text-2xl"></i>
        <h2 class="text-2xl font-semibold">Confirm Deletion</h2>
    </div>

    <div class="text-red-800 border border-red-400 p-4 rounded-md mb-6 bg-opacity-10">
        <p class="text-lg">
            Are you sure you want to delete the appointment for <strong>@Model.ClientName</strong>?
        </p>
        <p class="text-sm mt-1">
            (Employee ID: @Model.EmployeeId | Date: @Model.Date.ToShortDateString() | Time: @Model.Time)
        </p>
    </div>

    <form method="post" asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <div class="flex justify-end gap-3">
            <button type="submit" class="inline-flex items-center gap-2 bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md transition">
                <i class="bi bi-trash"></i> Yes, Delete
            </button>
            <a href="/Appointment" class="inline-flex items-center gap-2 border border-gray-400 hover:bg-gray-100 text-black px-4 py-2 rounded-md transition">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </div>
    </form>
</div>
