@model SalonEasy.Models.Admin
@{
    ViewData["Title"] = "Admin Login";
}

<div class="min-h-screen flex items-center justify-center">
    <div class="bg-white rounded-2xl shadow-2xl p-10 w-full max-w-md">

        <!-- Text-based Logo -->
        <a href="/" class="flex justify-center items-center space-x-2">
            <i class="bi bi-scissors text-2xl text-accent"></i>
            <span class="text-2xl font-bold text-primary">SalonEasy</span>
        </a>
        <h2 class="text-center text-3xl font-extrabold text-gray-800 mb-8">Sign In</h2>

        @if (ViewBag.Error != null)
        {
            <div class="bg-red-100 text-red-700 px-4 py-2 rounded mb-4">
                @ViewBag.Error
            </div>
        }

        <form asp-action="Login" method="post" class="space-y-6">
            <div>
                <label asp-for="Username" class="block text-gray-700 font-medium mb-1">Username</label>
                <input asp-for="Username"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 transition" />
            </div>

            <div>
                <label asp-for="Password" class="block text-gray-700 font-medium mb-1">Password</label>
                <input asp-for="Password" type="password"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 transition" />
            </div>

            <div class="flex items-center justify-between">
                <label class="inline-flex items-center">
                    <input type="checkbox" name="RememberMe"
                           class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" />
                    <span class="ml-2 text-gray-600 text-sm">Remember me</span>
                </label>
                <a href="/Admin/ForgotPassword" class="text-sm text-indigo-600 hover:underline">Forgot password?</a>
            </div>

            <button type="submit"
                    class="w-full bg-indigo-600 text-white py-2 rounded-lg font-semibold hover:bg-indigo-700 transition">
                Sign In
            </button>
        </form>

        <p class="mt-6 text-center text-gray-500 text-sm">
            &copy; @DateTime.Now.Year SalonEasy. All rights reserved.
        </p>
    </div>
</div>
