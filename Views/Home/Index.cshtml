@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isAdminLoggedIn = Context.Session.GetString("IsAdminLoggedIn") == "true";
}

<!-- HERO -->
<section id="hero" class="relative min-h-screen flex items-center justify-center text-center px-6 bg-gradient-to-b from-teal-50 to-white overflow-hidden">
  <div class="absolute -top-32 -left-32 w-96 h-96 bg-purple-200 rounded-full opacity-30 animate-pulse"></div>
  <div class="absolute -bottom-32 -right-32 w-96 h-96 bg-indigo-200 rounded-full opacity-20 animate-ping"></div>

  <div class="relative z-10 max-w-2xl">
    <h1 class="text-5xl md:text-6xl font-extrabold mb-6 text-gray-800">
      <span class="bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">SalonEasy</span> — Effortless Salon Management
    </h1>
    <p class="text-lg text-gray-700 mb-8">
      Simplify your salon’s life—staff, shifts, and bookings, all in one beautiful place.
    </p>
    <a href="@(!isAdminLoggedIn ? "/Admin/Login" : "#features")"
       class="inline-block px-8 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white rounded-full font-medium hover:from-indigo-700 hover:to-purple-700 transition shadow-lg">
            @(!isAdminLoggedIn ? "Login to Explore" : "Explore Features")
    </a>
  </div>
</section>

<!-- FEATURES -->
<section id="features" class="py-20 px-6 bg-teal-50">
  <div class="max-w-6xl mx-auto text-center">
    <h2 class="text-4xl font-bold mb-12 text-gray-800">Key Features</h2>
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
            @foreach (var feat in new[] {
        ("bi-people-fill","Staff Management","Manage your team effortlessly."),
        ("bi-calendar2-week","Shift Scheduling","Visual calendars with reminders."),
        ("bi-calendar-check","Appointment Booking","1-click client scheduling."),
        ("bi-list-task","Task Tracking","Keep daily workflows on track.")
      })
            {
            <div class="relative bg-white bg-opacity-30 backdrop-blur-lg p-6 rounded-xl shadow-2xl hover:shadow-inner transition transform hover:-translate-y-1">
              <div class="flex items-center justify-center w-14 h-14 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-full mb-4 text-white text-2xl">
                <i class="bi @(feat.Item1)"></i>
              </div>
              <h3 class="text-xl font-semibold mb-2 text-gray-800">@feat.Item2</h3>
              <p class="text-gray-700">@feat.Item3</p>
            </div>
            }
    </div>
  </div>
</section>

<!-- SERVICES -->
<section id="services" class="py-20 px-6 bg-pink-50">
  <div class="max-w-6xl mx-auto text-center">
    <h2 class="text-4xl font-bold mb-12 text-gray-800">Our Signature Services</h2>
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
            @foreach (var svc in new[] {
        ("bi-scissors","Haircut","Fresh cuts by top stylists."),
        ("bi-water","Facial","Revitalize your skin."),
        ("bi-droplet-half","Pedicure","Relaxing foot care."),
        ("bi-hand-index","Manicure","Perfect nails every time."),
        ("bi-palette","Coloring","Vibrant, fade-resistant color."),
        ("bi-heart-pulse","Massage","Relax body & mind.")
      })
            {
            <div class="bg-white bg-opacity-40 backdrop-blur-md p-6 rounded-2xl shadow-2xl hover:shadow-inner transition transform hover:scale-105">
              <div class="text-purple-600 text-4xl mb-3">
                <i class="bi @(svc.Item1)"></i>
              </div>
              <h3 class="text-xl font-semibold mb-1 text-gray-800">@svc.Item2</h3>
              <p class="text-gray-700">@svc.Item3</p>
            </div>
            }
    </div>
  </div>
</section>

<!-- TESTIMONIALS -->
<section id="testimonials" class="py-20 px-6 bg-amber-50">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-4xl font-bold text-center mb-12 text-gray-800">What Clients Love</h2>
    <div class="space-y-10">
            @foreach (var r in new[] {
        (Name:"Anjali Mehta", Service:"Facial", Quote:"“My skin glows like never before—true spa luxury!”"),
        (Name:"Ravi Kumar", Service:"Haircut", Quote:"“Best cut I’ve ever had—so precise!”"),
        (Name:"Priya Singh", Service:"Pedicure", Quote:"“Feet feel brand-new, and staff was so friendly.”")
      })
            {
            <div class="flex flex-col md:flex-row items-center bg-white bg-opacity-40 backdrop-blur-lg p-8 rounded-2xl shadow-2xl">
              <div class="w-20 h-20 bg-purple-200 rounded-full flex items-center justify-center text-white text-2xl font-bold mb-4 md:mb-0">
                <i class="bi bi-person-fill"></i>
              </div>
              <div class="md:ml-6 text-gray-800">
                <p class="italic mb-2">@r.Quote</p>
                <p class="font-semibold">— @r.Name, @r.Service</p>
              </div>
            </div>
            }
    </div>
  </div>
</section>

<!-- FEEDBACK FORM -->
<section id="feedback" class="py-20 px-6 bg-white">
  <div class="max-w-3xl mx-auto text-center">
    <h2 class="text-4xl font-bold mb-6 text-gray-800">Give Us Your Feedback</h2>
    <p class="text-gray-600 mb-8">Let us know about your experience or give kudos to our team!</p>
    <form asp-action="SubmitFeedback" method="post" class="space-y-6">
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <input name="Name"   placeholder="Your Name" class="border p-3 rounded w-full focus:ring-2 focus:ring-purple-300" required />
        <input name="Email"  type="email" placeholder="Your Email" class="border p-3 rounded w-full focus:ring-2 focus:ring-purple-300" required />
      </div>
      <select name="Service" class="border p-3 rounded w-full focus:ring-2 focus:ring-purple-300">
        <option disabled selected>Choose Service</option>
        <option>Haircut</option><option>Facial</option><option>Pedicure</option>
        <option>Manicure</option><option>Coloring</option><option>Massage</option>
      </select>
      <textarea name="Message" rows="4" placeholder="Your feedback..." class="border p-3 rounded w-full focus:ring-2 focus:ring-purple-300" required></textarea>
      <button type="submit"
              class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-6 py-3 rounded-full font-medium hover:from-indigo-700 hover:to-purple-700 transition shadow-xl">
        Submit Feedback
      </button>
    </form>
  </div>
</section>
